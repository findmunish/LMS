<%- include ('header') %>

<% if(errors && Object.keys(errors).length > 0 ) { %>
    <div class="alert alert-danger">
        <ul>
            <% for(let i in errors) { %>
                <li><%=errors[i]%></li>
            <% } %>
        </ul>
    </div>
<% } %>
    <div class="col">
        <h3>Edit Profile</h3>
        <hr />
        <form action="/api/editProfile" method="post">
            <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" value="<%=userName%>" />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" value="<%=userEmail%>"/>
            </div>

            <button class="btn btn-primary">Change Portfolio</button>
        </form>
    </div>
    
<%- include ('footer') %>